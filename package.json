{
  "name": "node.js-express-with-typescript-template",
  "version": "1.0.0",
  "description": "Node.js Express with TypeScript",
  "main": "app.bundle.js",
  "scripts": {
    "dev": "run-p dev:watch:server dev:start:server",
    "dev:watch:server": "webpack --mode=development --watch",
    "dev:start:server": "nodemon ./dist/app.bundle.js",
    "prod:build": "webpack --mode=production"
  },
  "dependencies": {
    "dotenv": "^16.0.3",
    "express": "^4.18.2"
  },
  "devDependencies": {
    "@babel/core": "^7.21.3",
    "@babel/preset-env": "^7.20.2",
    "@babel/preset-typescript": "^7.21.0",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/node": "^18.15.3",
    "babel-loader": "^9.1.2",
    "body-parser": "^1.20.2",
    "copy-webpack-plugin": "^11.0.0",
    "cors": "^2.8.5",
    "nodemon": "^2.0.21",
    "npm-run-all": "^4.1.5",
    "typescript": "^4.9.5",
    "webpack": "^5.76.1",
    "webpack-cli": "^5.0.1",
    "webpack-dev-server": "^4.12.0",
    "webpack-node-externals": "^3.0.0"
  },
  "nodemonConfig": {
    "watch": [
      "dist"
    ],
    "ext": "js,.env"
  },
  "author": "Cheng Yi Lin",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ChengYiLin/Node.js-Express-with-TypeScript-Template.git"
  },
  "keywords": [
    "Node.js",
    "TypeScript",
    "Express"
  ],
  "license": "ISC"
}
